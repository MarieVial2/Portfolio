{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IntituleExperience</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>MissionsExperience</th>
                <th>EtablissementExperience</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.intituleExperience }}</td>
                <td>{{ experience.dateDebut }}</td>
                <td>{{ experience.dateFin }}</td>
                <td>{{ experience.missionsExperience }}</td>
                <td>{{ experience.etablissementExperience }}</td>
                <td>
                    <a href="{{ path('app_experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('app_experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_experience_new') }}">Create new</a>
{% endblock %}
